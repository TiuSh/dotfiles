{
  "workbench.activityBar.visible": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.openSideBySideDirection": "down",
  "workbench.sideBar.location": "left",

  // Editor
  "editor.fontFamily": "'Fira Code'",
  "editor.tabSize": 2,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": false,
  "editor.fontLigatures": true,
  "editor.fontWeight": "500",
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "boundary",
  "diffEditor.renderSideBySide": false,
  "editor.codeLens": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.tslint": true
  },

  // VIM
  "vim.leader": ",",
  "vim.useSystemClipboard": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.useCtrlKeys": true,
  "vim.visualstar": true,
  "vim.highlightedyank.enable": true,
  "vim.easymotion": true,
  "vim.easymotionMarkerFontFamily": "Fira Code",
  "vim.easymotionMarkerFontSize": "11",
  "vim.easymotionMarkerYOffset": 3,
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "<space>"],
      "commands": [
        {
          "command": ":nohl"
        }
      ]
    },
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["m"],
      "after": ["d"]
    },
    {
      "before": ["m", "m"],
      "after": ["d", "d"]
    },
    {
      "before": ["d"],
      "after": ["\"", "_", "d"]
    },
    // Panels
    {
      "before": ["<leader>", "n"],
      "commands": ["workbench.view.explorer"]
    },
    // Windows split
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["<leader>", "v"],
      "commands": ["workbench.action.splitEditorRight"]
    },
    // Windows navigation
    {
      "before": ["<C-h>"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["<C-j>"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    // Windows manipulation
    {
      "before": ["<leader>", "b", "c"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "b", "a"],
      "commands": ["workbench.action.closeAllEditors"]
    },
    {
      "before": ["<C-S-l>"],
      "commands": ["workbench.action.moveEditorToRightGroup"]
    },
    {
      "before": ["<C-S-h>"],
      "commands": ["workbench.action.moveEditorToLeftGroup"]
    },
    {
      "before": ["<C-S-j>"],
      "commands": ["workbench.action.moveEditorToBelowGroup"]
    },
    {
      "before": ["<C-S-k>"],
      "commands": ["workbench.action.moveEditorToBelowGroup"]
    },
    // Editors navigation
    {
      "before": ["<C-p>"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<C-b>"],
      "commands": ["workbench.action.showAllEditors"]
    },
    // Vim Easymotion
    {
      "before": ["<leader>", "."],
      "after": ["<leader>", "<leader>"]
    },
    // Text manipulation
    {
      "before": ["<leader>", "r"],
      "commands": ["editor.action.rename"]
    },
    // Show helper tooltip
    {
      "before": ["<leader>", "h"],
      "commands": ["editor.action.showHover"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["m"],
      "after": ["d"]
    }
  ],

  // ESLint
  "eslint.autoFixOnSave": true,
  "eslint.packageManager": "yarn",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "window.zoomLevel": 0,
  "gitlens.blame.heatmap.enabled": false,
  "files.trimTrailingWhitespace": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "breadcrumbs.enabled": true,
  "tslint.alwaysShowRuleFailuresAsWarnings": false,
  "workbench.colorTheme": "Solarized Dark",
  "vscode-neovim.neovimPath": "/usr/local/bin/nvim",
  "vscode-neovim.neovimInitPath": "~/.config/vscode/init.vim",
  "liveshare.featureSet": "stable"
}
