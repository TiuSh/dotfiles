{
  // Color theme
  "workbench.colorTheme": "Solarized Dark",
  "workbench.iconTheme": null,

  // Editor
  "editor.fontFamily": "'Knack Nerd Font'",
  "editor.fontWeight": "bold",
  "editor.fontSize": 11,
  "editor.tabSize": 2,
  "editor.lineNumbers": "relative",

  // VIM
  "vim.leader": ",",
  "vim.useSystemClipboard": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.useCtrlKeys": true,
  "vim.visualstar": true,
  "vim.easymotion": true,
  "vim.easymotionMarkerFontFamily": "Knack Nerd Font",
  "vim.easymotionMarkerFontSize": "11",
  "vim.easymotionMarkerYOffset": 3,
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["j","k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.otherModesKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "<space>"],
      "commands": [
        {
          "command": ":nohl",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "w"],
      "after": [":", "w"]
    }
  ]
}
